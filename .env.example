# Django Environment Variables Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# GENERAL SETTINGS
# =============================================================================

# Enable reading from .env file (set to True to use this file)
DJANGO_READ_DOT_ENV_FILE=False

# Django debug mode (set to False in production)
DJANGO_DEBUG=False

# Django secret key (REQUIRED in production)
DJANGO_SECRET_KEY=your-secret-key-here

# =============================================================================
# MEDIA SETTINGS
# =============================================================================

# File upload directory (relative to MEDIA_ROOT, default: uploads/)
DJANGO_FILE_UPLOAD_DIR=uploads/

# =============================================================================
# EMAIL SETTINGS
# =============================================================================

# Email backend (default: django.core.mail.backends.smtp.EmailBackend)
DJANGO_EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# Default from email address
DJANGO_DEFAULT_FROM_EMAIL=Propylon Document Manager <noreply@propylon.com>

# Server email address
DJANGO_SERVER_EMAIL=Propylon Document Manager <noreply@propylon.com>

# Email subject prefix
DJANGO_EMAIL_SUBJECT_PREFIX=[Propylon Document Manager]

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Allowed hosts (comma-separated list)
DJANGO_ALLOWED_HOSTS=propylon.com,www.propylon.com

# Database connection max age (seconds)
CONN_MAX_AGE=60

# Redis URL for caching
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SECURITY SETTINGS (Production only)
# =============================================================================

# Enable SSL redirect
DJANGO_SECURE_SSL_REDIRECT=True

# Enable HSTS include subdomains
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=True

# Enable HSTS preload
DJANGO_SECURE_HSTS_PRELOAD=True

# Enable content type nosniff
DJANGO_SECURE_CONTENT_TYPE_NOSNIFF=True

# =============================================================================
# ADMIN SETTINGS
# =============================================================================

# Django admin URL (default: admin/)
DJANGO_ADMIN_URL=admin/

# =============================================================================
# AUTHENTICATION SETTINGS
# =============================================================================

# Allow user registration (default: True)
DJANGO_ACCOUNT_ALLOW_REGISTRATION=True 